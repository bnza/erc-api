<serializer xmlns="http://symfony.com/schema/dic/serializer-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping
        https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd"
>
    <class name="App\Entity\Data\MediaObject">
        <attribute name="id">
            <group>ImportedFile:read</group>
            <group>MediaObject:read</group>
        </attribute>
        <attribute name="originalFilename">
            <group>ImportedFile:read</group>
            <group>MediaObjectJoin:read</group>
            <group>MediaObject:read</group>
            <group>MediaObject:write</group>
        </attribute>
        <attribute name="description">
            <group>ImportedFile:read</group>
            <group>MediaObjectJoin:read</group>
            <group>MediaObject:read</group>
            <group>MediaObject:write</group>
        </attribute>
        <attribute name="sha256">
            <group>ImportedFile:read</group>
            <group>MediaObject:read</group>
            <group>MediaObject:write</group>
        </attribute>
        <attribute name="filePath">
            <group>MediaObject:write</group>
        </attribute>
        <attribute name="uploadDate">
            <group>MediaObjectJoin:read</group>
            <group>MediaObject:read</group>
            <group>MediaObject:write</group>
        </attribute>
        <attribute name="mimeType">
            <group>ImportedFile:read</group>
            <group>MediaObjectJoin:read</group>
            <group>MediaObject:read</group>
            <group>MediaObject:write</group>
        </attribute>
        <attribute name="size">
            <group>ImportedFile:read</group>
            <group>MediaObjectJoin:read</group>
            <group>MediaObject:read</group>
            <group>MediaObject:write</group>
        </attribute>
        <attribute name="contentUrl">
            <group>ImportedFile:read</group>
            <group>MediaObjectJoin:read</group>
            <group>MediaObject:read</group>
        </attribute>
    </class>
</serializer>
