        <attribute name="description">
            <group>Site:acl:read</group>
            <group>Site:item:write</group>
        </attribute>
        <attribute name="public">
            <group>Site:acl:read</group>
            <group>Site:item:write</group>
        </attribute>
    </class>
</serializer>
