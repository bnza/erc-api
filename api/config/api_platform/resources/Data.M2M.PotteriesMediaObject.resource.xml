<resources xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0
        https://api-platform.com/schema/metadata/resources-3.0.xsd">
    <resource class="App\Entity\Data\M2M\PotteriesMediaObject">
        <normalizationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>MediaObjectJoin:read</value>
                    </values>
                </value>
            </values>
        </normalizationContext>
        <operations>
            <operation class="ApiPlatform\Metadata\Get"/>
            <operation class="ApiPlatform\Metadata\GetCollection">
                <filters>
                    <filter>item_collection__media_object.search_filter</filter>
                </filters>
            </operation>
            <operation
                class="ApiPlatform\Metadata\Post"
                securityPostDenormalize="is_granted('create', object)"
            >
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>MediaObjectJoin:create</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <inputFormats>
                    <format name="multipart">multipart/form-data</format>
                </inputFormats>
            </operation>
            <operation
                class="ApiPlatform\Metadata\Delete"
                security="is_granted('delete', object)"
                output="false"
                status="204"
            />
        </operations>
    </resource>
</resources>
